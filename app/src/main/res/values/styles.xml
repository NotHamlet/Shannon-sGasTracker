<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <style name="DetailTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#303030</item>
        <item name="android:fontFamily">Roboto Regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="DetailField" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">Roboto Regular</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>


</resources>
